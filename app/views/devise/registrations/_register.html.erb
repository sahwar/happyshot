<div class="container">
	<div class="row">
    
  </div>
		
        <div class="modal fade" id="registerModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
              <h4 class="modal-title">Signup to happyshot.com</h4>
            </div>
          <div class="modal-body">
            <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
              <p>
                <%= f.email_field :email, autofocus: true, class: 'span3', placeholder: 'Email' %>
              </p>
              <p>
                 <%= f.password_field :password, autocomplete: "off", class: "span3", placeholder: "Password" %>
              </p>
              <p>
                 <%= f.password_field :password_confirmation, autocomplete: "off", class: "span3", placeholder: "Password" %>
              </p>
              <p>
                 <%= f.submit "Sign up", class: "btn btn-primary" %>
                <br />
              </p>
            <% end %>
          </div>
          <div class="modal-footer">
            <%= render "devise/shared/links" %>
          </div>
        </div>
	</div>
</div>