<div class="detailBox">
    <div class="titleBox">
      <label><%= post.note%></label>
        <!-- <button type="button" class="close" aria-hidden="true">&times;</button> -->
    </div>
    <div class="commentBox">
        
        <p class="taskDescription">
            <a href="#comments<%= post.id%>" class="dropdown-header" data-toggle="collapse"><%=post.comments.count%> comments</a>
        </p>
    </div>
    <div class="actionBox">
        <ul id="comments<%= post.id%>" class="commentList collapse" >
            <% post.comments.all.each do | comment | %>
            <li>
                <div class="commenterImage">
                  <img src="http://lorempixel.com/50/50/people/6" />
                </div>
                <div class="commentText">
                    <p class=""><%=comment.comment%></p> <span class="date sub-text">on <%=comment.created_at%></span>

                </div>
            </li>
            <%end%>
        </ul>


        
        <%= bootstrap_form_tag url: '/posts/add_new_comment', :html => { :class => "form-inline" }  do |f| %>
         
          <%= f.text_field :comment, placeholder: 'Your comments', hide_label: 'true' %>
           <%= hidden_field_tag "id", post.id %>
          <div class="form-group">
          <%= f.submit "Add", class: 'btn btn-default'%>
            </div>
        <% end %>





</div>