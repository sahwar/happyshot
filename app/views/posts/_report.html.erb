<div class="col-sm-4"><a href="#reportPostModal" data-toggle="modal" data-dismiss="modal" class ="btn btn-link glyphicon glyphicon-eye-open">&nbsp;Report</a></div>
            
<div class="modal fade" id="reportPostModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h4 class="modal-title">Report post</h4>
      </div>
      <%= bootstrap_form_for(@post, url: report_post_path) do |f| %>
      <div class="modal-body">
        <p align="left"> Post contains:</p>
        <div>
         <select name="type" id="type" class="form-control">
          <option selected disabled>Choose one</option>
          <option value="0">Sexual content</option>
          <option value="1">Graphic Content</option>
          <option value="2">Others</option>
        </select>
      </div>

      <%= hidden_field_tag "id", post.id %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
         <%= f.submit 'Report', :class=>"btn btn-primary" %>
      </div>
      <% end %>


      

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->